{
  "increment": "conventional:angular",
  "changelogCommand": "conventional-changelog -p angular | tail -n +3",
  "safeBump": false,
  "npm": {
    "publish": true,
    "ignoreVersion": true,
    "allowSameVersion": true
  },
  "git": {
    "commitMessage": "chore: Release ${version}",
    "commitArgs": ["--no-verify"]
  },
  "github": {
    "release": true,
    "autoGenerate": true
  }
}
